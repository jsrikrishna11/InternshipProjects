<html>
    <head>
        <%include ../partials/captchaScript.ejs %>
        <%include ../partials/head.ejs %>
        
    </head>
    <body >
            
        <% include ../partials/navigation.ejs %>
        <div>
            <form action="/contact" method="POST" >

                <label for="fname" class="text-heading" >First Name</label>
                <input class="contacts"type="text" id="fname" name="firstname" placeholder="Your First name.." required>
                    
                <label for="lname" class="text-heading" required>Last Name</label>
                <input class="contacts" type="text" id="lname" name="lastname" placeholder="Your Last name.." required>
                    
                <label class="text-heading">Email</label>
                <input class="contacts" type="email" name="email" placeholder="example: jhondoe@domain.com" required>
                <br>
                <label for="subject" class="text-heading">Subject</label>
                <textarea class="contacts" id="subject" name="subject" placeholder="Write something.." style="height:170px" required></textarea>
                <%include ../partials/captcha.ejs %>
                <input type="submit" value="Submit">
            </form> 
        </div> 
        <% if(responseCode == 0){ %>
            <p id="msg"><%= responseDesc %></p>
            <% } %>

    
    </body>
</html>